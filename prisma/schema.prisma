generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Persona {
  id              Int       @id @default(autoincrement())
  nombre          String
  apellido        String
  dni             String    @unique
  correo          String    @unique
  telefono        String?
  // Foto facial capturada
  fotoPerfilUrl   String?   // URL de la imagen si la almacenas como imagen

  // Vector de embedding facial (128 dimensiones)
  embedding       Json?     // Se guarda como JSON, ej: [0.123, -0.875, ..., 0.421]

  creadoEn        DateTime  @default(now())
}
